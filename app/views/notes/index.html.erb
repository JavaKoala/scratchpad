<div class="grid grid-cols-1 gap-8">
  <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white py-4 px-6 rounded-md shadow-sm">
    <h1 class="text-2xl font-semibold">Scratchpad</h1>
  </div>

  <%= turbo_stream_from dom_id(@note) %>
  <div id=<%= dom_id(@note) %>>
    <%= render partial: 'notes/note', locals: { note: @note }%>
  </div>

  <div>
    <%= form_with model: @note, id: 'scratch-pad-form' do |form| %>
      <%= form.rich_textarea :content %>
    <% end %>
    <div class="flex justify-between mb-8">
      <%= button_tag 'Save', type: 'submit', form: 'scratch-pad-form', class: 'rounded-md bg-blue-600 px-3 py-2 mt-4 text-sm font-semibold text-white shadow-xs hover:bg-blue-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600' %>
      <div class="flex">
        <%= link_to 'Refresh', notes_path, class: 'rounded-md bg-green-600 px-3 py-2 mt-4 mr-4 text-sm font-semibold text-white shadow-xs hover:bg-green-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600' %>
        <%= button_to 'Clear', note_path(@note), method: :patch, params: { note: { content: '<p><br></p>'} }, class: 'rounded-md bg-white px-3 py-2 mt-4 text-sm font-semibold text-gray-900 shadow-xs inset-ring inset-ring-gray-300 hover:bg-gray-100' %>
      </div>
    </div>
  </div>
</div>
